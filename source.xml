<xml protocol="http11">
    <name>API V1</name>
    <description>API Mocker Protocol - HTTP</description>

    <api>
        <group pattern="file" description="api">
            <route pattern="file" description="Simple file show" method="GET">
                <return type="file" description="XML file">source.xml</return>
            </route>
            <route pattern="file-attachment" description="Simple file download" method="GET">
                <return type="file-attachment" description="XML file">./source.xml</return>
            </route>
            <route pattern="file-html" description="Html document show" method="GET">
                <return type="file-html" description="Html file">example.html</return>
            </route>
        </group>

        <route pattern="json" description="Simple JSON show" method="GET">
            <return type="json" description="JSON text">{"name":"JSON"}</return>
        </route>

        <route pattern="xml" description="Simple XML show" method="GET">
            <return type="xml" description="XML text">
                <xml><name>name</name></xml>
            </return>
        </route>

        <route pattern="toml" description="Simple TOML show" method="GET">
            <return type="toml" description="TOML text">toml</return>
        </route>

        <route pattern="yaml" description="Simple YAML show" method="GET">
            <return type="yaml" description="YAML text">yaml</return>
        </route>

        <route pattern="string" description="Simple String show" method="GET">
            <cookie name="my-cookie" value="my-cookie-value"/>
            <return type="string" description="String text">String here!</return>
        </route>

    </api>
</xml>
